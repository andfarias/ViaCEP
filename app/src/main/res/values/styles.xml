<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <dimen name="card_corner_radius">8dp</dimen>
    <dimen name="card_content_padding_vertical">3dp</dimen>
    <dimen name="card_margin">15dp</dimen>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">3dp</item>
        <item name="cardMaxElevation">3dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="contentPaddingBottom">@dimen/card_content_padding_vertical</item>
        <item name="contentPaddingTop">@dimen/card_content_padding_vertical</item>
        <item name="contentPaddingLeft">@dimen/card_margin</item>
        <item name="contentPaddingRight">@dimen/card_margin</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

</resources>